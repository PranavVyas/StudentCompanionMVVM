<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/tv_recycler_individual_attendance_leture_no"
        android:layout_width="95dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_individual_attendance_subject_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_recycler_individual_attendance_subject_name"
        android:layout_width="176dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switch_recycler_individual_attendance_present"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_individual_attendance_leture_no"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Engineering Mathematics 2" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_recycler_individual_attendance_present"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_individual_attendance_subject_name"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_recycler_individual_attendance_switch_summery"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/darker_gray"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/switch_recycler_individual_attendance_present"
        app:layout_constraintStart_toStartOf="@+id/switch_recycler_individual_attendance_present"
        app:layout_constraintTop_toBottomOf="@+id/switch_recycler_individual_attendance_present"
        tools:text="Present" />
</androidx.constraintlayout.widget.ConstraintLayout>