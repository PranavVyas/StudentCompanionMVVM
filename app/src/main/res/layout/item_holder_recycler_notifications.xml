<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_recycler_notification_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[1]" />

        <TextView
            android:id="@+id/tv_recycler_notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            style="@style/MyMaterialTextView.MediumTextViewHeadLine6"
            app:layout_constraintEnd_toStartOf="@+id/tv_recycler_notification_date"
            app:layout_constraintStart_toEndOf="@+id/image_recycler_notification_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recycler_notification_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/MyMaterialTextView.SmallTextViewBody2"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Subtitle"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_notification_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_notification_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_recycler_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="12/12/2012"
            style="@style/MyMaterialTextView.SmallTextViewBody2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_recycler_notification_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_recycler_notification_title"
            app:layout_constraintTop_toTopOf="@+id/tv_recycler_notification_title" />

        <Button
            android:id="@+id/btn_recycler_notification_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="More"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_recycler_notification_subtitle"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_notification_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_notification_subtitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>