<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_art_background"
    tools:context=".ui.activities.AutoAttendanceSubjectListActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_auto_attendance_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_auto_attendance_subject_list"
        tools:listitem="@layout/item_holder_recycler_auto_attendance_list_subject" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_auto_attendance_subject_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_toolbar_auto_attendance_subject_list"
            style="@style/MyCustomToolbarTextView"
            android:text="Select Subject" />
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>