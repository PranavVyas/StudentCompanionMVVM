<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="?attr/custom_background_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_recycler_holiday_fragment_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="10/12/2018"
        android:textAlignment="center"
        style="@style/MyMaterialTextView.SmallTextViewBody1.White"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_holiday_fragment_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recycler_holiday_fragment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        style="@style/MyMaterialTextView.SmallTextViewBody1.White"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_holiday_fragment_day"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Holiday1IsReallyBigReallyBig" />

    <TextView
        android:id="@+id/tv_recycler_holiday_fragment_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Sunday"
        android:textAlignment="center"
        style="@style/MyMaterialTextView.SmallTextViewBody1.White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_recycler_holiday_fragment_name"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_holiday_fragment_date"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>